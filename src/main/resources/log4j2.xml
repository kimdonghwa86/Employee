<?xml version="1.0" encoding="UTF-8"?>


<Configuration>

	<!-- Appender, Layout 설정 -->
	<Appenders>

		<Console target="SYSTEM_OUT" name="console">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
		</Console>



		<File name="MyFile" fileName="app.log">
			<PatternLayout pattern="%d %5p [%c] %m%n" />
		</File>
	</Appenders>

	<!-- Logger 설정 -->
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="console" />
			<AppenderRef ref="MyFile" />
		</Root>

	</Loggers>

</Configuration>